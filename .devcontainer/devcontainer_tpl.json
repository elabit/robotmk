{
	"name": "$CONTAINER_NAME",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "$VERSION"
		}
	},
	"containerEnv": {
		"CMK_SITE_ID": "cmk",
		"CMK_PASSWORD": "cmk"
	},
	"appPort": [
		"4999:5000"
	],
	"customizations": {
		"settings": {
			"terminal.integrated.shell.linux": "/bin/bash",
			"extensions.autoUpdate": false,
			"python.pythonPath": "/omd/sites/cmk/bin/python3"
		},
		"extensions": [
			"ms-python.python",
			"littlefoxteam.vscode-python-test-adapter"
		]
	},
	"postCreateCommand": ".devcontainer/postCreateCommand.sh full",
	"remoteUser": "cmk",
	"remoteEnv": {
		"PATH": "/omd/sites/cmk/bin:/omd/sites/cmk/local/lib/python3/bin/:${containerEnv:PATH}",
		"OMD_ROOT": "/omd/sites/cmk",
		"OMD_SITE": "cmk",
		"CMK_SITE_ID": "cmk",
		"WORKSPACE": "###{containerWorkspaceFolder}",
		"CMK_VERSION_MM": "$CMK_VERSION_MM"
	},
	"mounts": [
		"source=/etc/timezone,target=/etc/timezone,type=bind,readonly"
	]
}
